<!DOCTYPE html>
<html>
  <%- include('./meta/index', { title: 'Home', css: 'main' }); %>
  <body>
    <div class="m-auto max-w-max text-center">
      <%- include('./meta/nav'); %>
      <div class="my-1"></div>
      <div class="box">
        <h3 class="my-1" style="font-size: 32px;">Generate Passwords Here</h3>
        <div class="resultPass" id="rslt">
          <p id="message"></p>
          <p id="salt"></p>
          <p id="md5"></p>
          <div class="my-1"></div>
        </div>
        <button type="submit" class="btn btn-success" style="margin-bottom: 5px;" id="key">Generate</button>
      </div>
      <div class="my-5"></div>
      <div class="resBox">
        <label for="customRange3" class="form-label" style="font-size: 22.5px;">Password Length</label> <br>
        <input for="keySlider" class="numberSize" type="number" name="keyG" id="keyG" placeholder="6" min="6" max="12" value="9"> <br>
        <input type="range" class="form-range" min="6" max="12" value="9" step="1" id="customRange3" style="width: 75%;">
        <div class="spacer"></div>
        <button type="button" class="btn btn-success cButton" style="margin-bottom: 5px;" id="copyBTN" onclick="copyLink()">Copy Password</button>
      </div>
  </body>
</html>
<script defer>
  const keySlider = document.getElementById('customRange3');
  const keyG = document.getElementById('keyG');
  var h = document.getElementById('md5');
  var cc = document.getElementById('rslt')
  var g = document.getElementById('message');
  var copy = document.getElementById('copyBTN');
  var s = document.getElementById('salt');
  var h = document.getElementById('md5');
  let cookie = localStorage.getItem("session");

  fetch(`https://www.eiffelware.net/api/v1/apps/gatekeeper/auth`, { method: 'post', headers: { session: cookie } }).then((r) => r.json()).then((b) => {
      if (b.OK == false || b.error) return window.close();
      let acc = b;
      var accn = document.getElementById('accNav');
      var logn = document.getElementById('logoutNav');
      accn.setAttribute('onclick', `window.open("https://www.eiffelware.net/dashboard?auth=${cookie}")`);
      logn.setAttribute('onclick', `localStorage.removeItem("session"), window.close()`);
      console.log(b);
  });

  keySlider.addEventListener('input', syncPassLength)
  keyG.addEventListener('input', syncPassLength)

  function syncPassLength(e) {
      const value = e.target.value
      keySlider.value = value
      keyG.value = value
  }

  function quitApp() {
    window.close();
  }

  function copyLink() {
      var text = $("#message").get(0)
      var passText = text.innerText.split(': ')[1];
      var selection = window.getSelection();
      var range = document.createRange();
      navigator.clipboard.writeText(passText).then(function() {
        document.getElementById('key').innerHTML = `Generate`;
        g.innerHTML = "Copied Password";
        s.innerHTML = "";
        h.innerHTML = "";
        copy.classList.remove('cButton-on');
        copy.classList.add('cButton');
      }, function(err) {
        console.error('Async: Could not copy text: ', err);
      });
  }

  g.innerHTML = "";
  h.innerHTML = "";
  $('#key').on("click", function(e) {
      var g = document.getElementById('message');
      var h = document.getElementById('md5');
      var i = document.getElementById('keyG').value;
      var p = document.getElementById('key').value = i;
      var s = document.getElementById('salt');
      var copy = document.getElementById('copyBTN');

      g.innerHTML = ""
      if (isNaN(e.target.value)) {
          g.innerHTML = "";
          g.innerHTML = `<p>You need to enter a number.</p>`;
      } else {
          g.innerHTML = "Loading. . .";
          h.innerHTML = "";
          s.innerHTML = "";
          fetch(`https://www.eiffelware.net/api/generate?l=${e.target.value}`, { method: 'get', headers: { appsession: cookie } }).then((r) => r.json()).then((b) => {
          if (b.OK == false) {
          g.innerHTML = "";
          g.innerHTML = `<p>${b.error}</p>`;
      } else {
          g.innerHTML = "";
          g.innerHTML = `<p style="padding: 5px; margin-bottom: 5px;">Password: ${b.id}</p>`;
          s.innerHTML = `<p style="padding: 5px; margin-bottom: 5px;">Salt: ${b.salt}</p>`;
          h.innerHTML = `<p style="padding: 5px;">md5 Hash: ${b.md5Hash}</p>`;
          document.getElementById('key').innerHTML = `Generate Again`;
          copy.classList.remove('cButton');
          copy.classList.add('cButton-on');
          }
      })
  }
})
</script>